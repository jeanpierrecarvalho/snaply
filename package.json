{
  "name": "snaply",
  "packageManager": "yarn@1.22.1",
  "version": "1.0.3",
  "repository": "git@github.com:jeanpierrecarvalho/snaply.git",
  "author": "Jean-Pierre Carvalho <hello@jeanpierrecarvalho.pt>",
  "main": "dist/snaply.cjs.js",
  "module": "dist/snaply.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/snaply.es.js",
      "require": "./dist/snaply.cjs.js"
    },
    "./umd": "./dist/snaply.umd.js"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "{**/*,*}.{tsx,ts,html,css}": "prettier --write"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly && rollup -c rollup.config.dts.mjs",
    "test": "vitest --run",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "knip": "knip",
    "lint": "eslint",
    "deps:check": "yarn upgrade-interactive"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "husky": "^9.1.5",
    "knip": "^5.30.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "license": "MIT"
}
